<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/header"
        android:paddingBottom="10dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentTop="true"
            android:src="@drawable/bbk1" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="تمامی قیمت ها به ریال می باشد"
            android:textColor="#003976"
            android:textSize="11sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:background="#003976"
            android:height="20dp"
            android:minHeight="25dp"
            android:text="فهرست"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:width="75dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingRight="6dp"
            android:text="قیمت روز نهاده ها"
            android:textColor="#FFF"
            android:textSize="18sp" />

    </RelativeLayout>
    
	<TableLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:showDividers="none" >
	
	    <TableRow
	        android:background="#FFFFE3"
	        android:dividerPadding="0dp"
	        android:gravity="center"
	        android:paddingBottom="6dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingTop="5dp"
	        android:showDividers="none" >

	        <TextView
	            android:id="@+id/max"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:paddingLeft="6dp"
	            android:text="برای مشاهده نمودار و مشخصات شرکت تامین کننده بر روی محصول کلیک نمایید"
	            android:textColor="#333333"
	            android:textSize="11sp" />

	    </TableRow>
	    <TableRow
	        android:background="#5298E3"
	        android:dividerPadding="0dp"
	        android:gravity="right"
	        android:paddingBottom="2dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingTop="5dp"
	        android:showDividers="none" >
	
	        <TextView
	            android:id="@+id/max1"
	            android:layout_width="0dp"
	            android:layout_height="28dp"
	            android:layout_weight=".18"
	            android:gravity="center_horizontal"
	            android:paddingLeft="6dp"
	            android:text="حداکثر قیمت"
	            android:textColor="#FFF"
	            android:textSize="11sp" />
	
	        <TextView
	            android:id="@+id/min"
	            android:layout_width="0dp"
	            android:layout_height="28dp"
	            android:layout_weight=".18"
	            android:gravity="center_horizontal"
	            android:text="حداقل قیمت"
	            android:textColor="#FFF"
	            android:textSize="11sp" />
	
	        <TextView
	            android:id="@+id/date"
	            android:layout_width="0dp"
	            android:layout_height="28dp"
	            android:layout_weight=".18"
	            android:gravity="center_horizontal"
	            android:text="تاریخ"
	            android:textColor="#FFF"
	            android:textSize="11sp" />
	
	        <TextView
	            android:id="@+id/name"
	            android:layout_width="0dp"
	            android:layout_height="28dp"
	            android:layout_weight=".23"
	            android:gravity="center_horizontal"
	            android:text="عنوان محصول"
	            android:textColor="#FFF"
	            android:textSize="11sp" />
	
	</TableRow>
	</TableLayout>    
  
    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:dividerHeight="0dp"
        android:overScrollMode="always"
        android:paddingTop="0dp"
        android:scrollbars="vertical|horizontal"
        android:textAlignment="gravity" >

    </ListView>
</LinearLayout>
