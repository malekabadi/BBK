<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ededee"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="5dip"
        android:background="#ededee"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gridview_text1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/imglay"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/imglay"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/pic_place2"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/gridview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/hugh"/>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/gridview_text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="0.5dp"
        android:background="#c1dfb9"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dip"
        android:textSize="12sp" />
</LinearLayout>