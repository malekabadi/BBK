<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83c670"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aseman.bbk.Products">

    <LinearLayout
        android:id="@+id/Lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lay1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dip"
            android:layout_marginRight="5dp"
            android:paddingRight="20dp"
            android:layout_weight="1"
            android:background="#ededee"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="Name"
                android:layout_marginTop="20dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gridview_text1"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|right"
                android:text="Number"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/heg"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_marginLeft="-15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:background="@drawable/pic_place"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="125dip"
                android:layout_height="130dip"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:padding="5dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lay3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Lay4"
        android:layout_below="@+id/Lay2"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/Act"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:text="Activity"
            android:textSize="18sp" />
        <!--android:background="@drawable/editt"-->


        <TextView
            android:id="@+id/Manager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridview_text1"
            android:background="#fff"
            android:gravity="center_vertical|right"
            android:text="Manager"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Year"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridview_text2"
            android:background="#fff"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:text="Year"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/WWW"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridview_text2"
            android:background="#fff"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:text="www"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Resume"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridview_text2"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:text="Resume"
            android:maxLines = "10"
            android:scrollbars = "vertical"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lay4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/sms" />

        <ImageView
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/call" />


        <ImageView
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/email" />

    </LinearLayout>

</RelativeLayout>
