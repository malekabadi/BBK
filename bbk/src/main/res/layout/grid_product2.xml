<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/rback"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/heg"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="14dp"
            android:background="@drawable/pic_place"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gridview_image"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:background="@android:color/transparent"
                android:src="@drawable/hugh"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/gridview_text1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="Text1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/gridview_text2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gridview_text1"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical|right"
                android:text="Text1"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/gridview_text3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gridview_text2"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|right"
                android:text="Text1"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-6dip"
        android:background="@drawable/editc">

    <LinearLayout
        android:id="@+id/Lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lay2"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:text="Text1"
            android:textSize="16sp" />
        <!--android:background="@drawable/editt"-->


        <TextView
            android:id="@+id/text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridview_text1"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:text="Text1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridview_text2"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:text="Text1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridview_text2"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:text="Text1"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lay4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Lay3"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/sms" />

        <ImageView
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:src="@drawable/call" />


        <ImageView
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:src="@drawable/email" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>